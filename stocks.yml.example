# A股自选股智能分析系统 - 股票列表配置
# 复制此文件为 stocks.yml 并填写您的股票列表
#
# 格式说明：
# - code: 股票代码（必填）
# - name: 股票名称（必填，作为降级方案）
#
# 支持市场：
# - A股：600xxx/601xxx/603xxx（沪市），000xxx/002xxx/300xxx（深市）
# - 美股：如 AAPL, TSLA
# - 港股：5位数字，如 00700

stocks:
  # A股示例
  - code: "600519"
    name: "贵州茅台"
  - code: "000001"
    name: "平安银行"
  - code: "300750"
    name: "宁德时代"
  - code: "002594"
    name: "比亚迪"

  # 美股示例
  - code: "AAPL"
    name: "苹果"
  - code: "TSLA"
    name: "特斯拉"

  # 港股示例
  - code: "00700"
    name: "腾讯控股"
  - code: "03690"
    name: "美团"

# 配置版本（用于未来格式升级）
version: "1.0"
